<Controls:MetroWindow x:Class="UIEditor.Project.ReloadConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="新发现的外部修改"
		ShowInTaskbar="False"
		WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize"
		WindowStyle="None"
		Foreground="{StaticResource Foreground}"
		Background="{StaticResource BackgroundNormal}"
		Width="450"
		Height="200">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Name="mx_fileName"
				   Grid.Row="0"
				   Margin="10,10,10,0"
				   TextWrapping="Wrap">
			文件名
		</TextBlock>
		<TextBlock Name="mx_tip"
				   Grid.Row="1"
				   Margin="10,0,10,10"
				   TextWrapping="Wrap">
			文件在编辑器外部被修改，重新加载本文件还是保留目前修改？（重新加载会导致本文件的当前状态和操作历史丢失）
		</TextBlock>
		<WrapPanel Grid.Row="2" FlowDirection="RightToLeft" VerticalAlignment="Bottom">
			<Button Name="mx_cancel"
						Width="75"
						Height="25"
						Margin="5"
						Padding="15,2,15,2"
						Click="mx_cancel_Click">
				取消
			</Button>
			<Button Name="mx_ok"
					Width="75"
					Height="25"
					Margin="5"
					Padding="15,2,15,2"
					Click="mx_ok_Click">
				重新加载
			</Button>
		</WrapPanel>
	</Grid>
</Controls:MetroWindow>
