<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:userView="clr-namespace:UIEditor"
	mc:Ignorable="d"
	x:Class="UIEditor.AttrList"
	x:Name="mx_root"
	Background="#ffd0d0d0">
	<StackPanel Margin="2">
		<Border BorderThickness="1" BorderBrush="#ffffffff" Background="#ff444444" CornerRadius="2">
			<Label Name="mx_title"
				   Foreground="White"
				   Margin="0,0,0,0"
				   Padding="5,1,0,1"
				   Content="a"/>
		</Border>
		<StackPanel Name="mx_frame">
			<Grid Name="mx_setting"
				  MinWidth="250"
				  Margin="5"
				  HorizontalAlignment="Right">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Name="mx_cs0" Width="125"/>
					<ColumnDefinition Name="mx_cs1" Width="*"/>
				</Grid.ColumnDefinitions>
				<CheckBox Name="mx_onlySetted"
						  Grid.Column="0"
						  VerticalAlignment="Center"
						  Margin="10,0,0,0"
						  Checked="mx_onlySetted_Checked"
						  Unchecked="mx_onlySetted_Unchecked">
					隐藏未赋值的项
				</CheckBox>
				<CheckBox Name="mx_onlyCommon"
						  Grid.Column="1"
						  VerticalAlignment="Center"
						  Margin="10,0,0,0"
						  IsChecked="True"
						  Checked="mx_onlyCommon_Checked"
						  Unchecked="mx_onlyCommon_Unchecked">
					只显示常用项
				</CheckBox>
			</Grid>
		</StackPanel>
	</StackPanel>
</Grid>