<Window x:Class="UIEditor.Public.ErrorInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UI编辑器错误" Width="600" Height="450">
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Label>UI编辑器出现错误，错误信息如下：</Label>
		<TextBox Name="mx_errorInfo"
				 Grid.Row="1"
				 Margin="0,5,0,0"
				 AcceptsReturn="True"
				 VerticalScrollBarVisibility="Visible"
				 HorizontalScrollBarVisibility="Visible"
				 HorizontalAlignment="Stretch"
				 IsReadOnly="True"
				 FontFamily="Consolas"/>
	</Grid>
</Window>
